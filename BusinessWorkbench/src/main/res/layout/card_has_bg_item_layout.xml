<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_has_bg_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_item"
        android:textSize="@dimen/dimen_item_text_size"/>

    <ImageView
        android:id="@+id/card_has_bg_item_icon"
        android:layout_width="@dimen/dimen_item_icon_width_height"
        android:layout_height="@dimen/dimen_item_icon_width_height"
        android:scaleType="fitXY"
        android:layout_below="@+id/card_has_bg_item_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
